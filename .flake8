[flake8]
max-line-length = 79
extend-ignore =
    E203,
    W503,
    E501
exclude =
    .git,
    __pycache__,
    .venv,
    venv,
    .eggs,
    *.egg,
    build,
    dist,
    .tox,
    .coverage,
    htmlcov
per-file-ignores =
    __init__.py:F401
    tests/*:D100,D101,D102,D103,D104
docstring-convention = numpy
